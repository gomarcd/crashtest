{
  "source": ["./build/bin/$APP_NAME.app"],
  "bundle_id": "$BUNDLE_ID",
  "apple_id": {
    "username": "$APPLE_ID_USER",
    "password": "$APPLE_ID_PASS",
    "provider": "$APPLE_TEAM_ID"
  },
  "sign": {
    "application_identity": "$APPLE_DEVELOPER_ID_CERT"
  },
  "dmg" :{
    "output_path":  "./build/bin/$APP_NAME.dmg",
    "volume_name":  "$APP_NAME"
  }
}